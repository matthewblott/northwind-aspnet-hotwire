@using Northwind.Application.Products.Shared.Models
@model Product

<form method="post" id="product-form">
  <input asp-for="Id" type="hidden" asp-model-prefix>
  <fieldset>
    <field>
      <label asp-for="Name"></label>
      <input asp-for="Name" asp-model-prefix>
      <span asp-validation-for="Name"></span>
    </field>
    <field>
      <label asp-for="CategoryId"></label>
      <input asp-for="CategoryId" asp-model-prefix>
      <span asp-validation-for="CategoryId"></span>
    </field>
    <field>
      <label asp-for="QuantityPerUnit"></label>
      <input asp-for="QuantityPerUnit" asp-model-prefix>
      <span asp-validation-for="QuantityPerUnit"></span>
    </field>
    <field>
      <label asp-for="UnitPrice"></label>
      <input asp-for="UnitPrice" asp-model-prefix>
      <span asp-validation-for="UnitPrice"></span>
    </field>
  </fieldset>
</form>
