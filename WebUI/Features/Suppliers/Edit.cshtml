@using Northwind.Application.Suppliers.Shared.Models
@model Supplier

<h1>Edit Supplier</h1>

<button asp-action="Update" form="supplier-form">Update</button>
<button form="supplier-delete-form">Delete</button>
<a role="button" asp-action="Show" asp-route-id="@Model.Id">Cancel</a>
<form asp-action="Delete" method="post" id="supplier-delete-form">
  <input type="hidden" name="Id" value="@Model.Id">
</form>
<partial name="_Form" />
